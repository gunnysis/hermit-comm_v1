{
  "$schema": "https://json.schemastore.org/eas.json",
  "cli": { "version": ">= 16.3.1", "appVersionSource": "remote" },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": { "buildType": "apk", "gradleCommand": ":app:assembleDebug" },
      "env": { "APP_ENV": "development" },
      "cache": { "disabled": false }
    },
    "preview": {
      "channel": "preview",
      "distribution": "internal",
      "android": { "buildType": "apk", "gradleCommand": ":app:assembleRelease" },
      "env": { "APP_ENV": "preview", "SENTRY_DISABLE_AUTO_UPLOAD": "true" },
      "cache": { "disabled": false }
    },
    "production": {
      "channel": "production",
      "developmentClient": false,
      "autoIncrement": true,
      "android": { "buildType": "app-bundle", "gradleCommand": ":app:bundleRelease" },
      "env": { "APP_ENV": "production", "SENTRY_DISABLE_AUTO_UPLOAD": "true" },
      "cache": { "disabled": false }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": ".key/apps-2182e-4cfe31bef56b.json",
        "track": "production",
        "releaseStatus": "completed"
      }
    },
    "preview": {
      "android": { "track": "internal", "releaseStatus": "draft" }
    }
  }
}
