{
  "name": "gns-hermit-comm",
  "version": "1.0.0",
  "description": "A social media app for sharing stories and connecting with others in a hermit community",
  "main": "index.tsx",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "maestro test .maestro",
    "test:e2e:admin": "maestro test .maestro/admin-login.yaml .maestro/admin-create-group.yaml .maestro/admin-logout.yaml",
    "prepare": "husky",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "update:preview": "eas update --channel preview",
    "update:production": "eas update --channel production"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "@hookform/resolvers": "^3.9.1",
    "@react-native-async-storage/async-storage": "~2.2.0",
    "@react-native-community/netinfo": "^12.0.1",
    "@shopify/flash-list": "2.0.2",
    "@supabase/supabase-js": "^2.95.3",
    "@tanstack/query-persist-client-core": "^5.91.19",
    "@tanstack/react-query": "^5.62.0",
    "date-fns": "^4.1.0",
    "expo": "~54.0.33",
    "expo-constants": "^18.0.13",
    "expo-dev-client": "~6.0.20",
    "expo-haptics": "^15.0.8",
    "expo-linear-gradient": "^15.0.8",
    "expo-linking": "^8.0.11",
    "expo-router": "~6.0.23",
    "expo-status-bar": "~3.0.9",
    "expo-updates": "~29.0.16",
    "nativewind": "^4.0.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.54.0",
    "react-native": "0.81.5",
    "react-native-css-interop": "^0.2.1",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "zod": "^3.23.8",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "~29.5.14",
    "@types/react": "~19.1.10",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "babel-preset-expo": "^54.0.10",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.11",
    "jest": "29.7.0",
    "jest-expo": "~54.0.17",
    "lint-staged": "^15.2.10",
    "prettier": "^3.2.4",
    "react-native-worklets": "0.5.1",
    "react-test-renderer": "19.1.0",
    "tailwindcss": "3.4.19",
    "typescript": "~5.9.2"
  },
  "private": true,
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
